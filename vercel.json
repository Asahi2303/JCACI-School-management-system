{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "styles.css", "use": "@vercel/static" },
    { "src": "script.js", "use": "@vercel/static" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "rewrites": [
  { "source": "/api/(.*)", "destination": "https://jcaci-backend.onrender.com/api/$1" },
  { "source": "/uploads/:path*", "destination": "https://jcaci-backend.onrender.com/uploads/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*).(js|css|png|jpg|jpeg|svg|woff2?)$",
      "headers": [ { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" } ]
    }
  ]
}
